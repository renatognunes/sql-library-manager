extends layout.pug

block content
  body
    div.content
      div.main
        h1 Library Management System
        div.head
          p
            a.button(href='/books/new') Add New Book
          form(method='get' class='search-form')
            input(type='text' placeholder='Search...' name='search')
            button(type='submit')
              i(class="fa fa-search")
        table.main-table
          thead
            tr
              th Title
              th Author
              th Genre
              th Year
          tbody
            each book in books
              tr
                td
                  a(href=`books/${book.id}`) #{book.title}
                td #{book.author}
                td #{book.genre}
                td #{book.year}
  script(src='/static/script.js')

